{
    "manifest_version": 3,
    "name": "Buster",
    "description": "Highlight user-sourced accounts that have been reported to use AI.",
    "version": "1.0.0",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "action": {
        "default_title": "Buster",
        "default_popup": "popup.html"
    },
    "host_permissions": [
        "https://buster-backend.jadeposting.workers.dev/*"
    ],
    "background": {
        "service_worker": "service-worker.js",
        "scripts": [
            "service-worker.js"
        ]
    },
    "content_scripts": [
        {
            "js": [
                "foreground.js"
            ],
            "all_frames": false,
            "matches": [
                "https://twitter.com/*",
                "https://x.com/*"
            ]
        }
    ],
    "minimum_chrome_version": "120",
    "browser_specific_settings": {
        "gecko": {
            "id": "buster@jadeposting",
            "strict_min_version": "109.0"
        }
    }
}